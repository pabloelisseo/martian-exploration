{
  "ts-node": {
    "compiler": "ttypescript"
  },
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["*"]
    },
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ],
  }
}