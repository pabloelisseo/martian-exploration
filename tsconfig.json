{
    "ts-node": {
        "compiler": "ttypescript"
    },
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["ES2015", "DOM"],
        "outDir": "./dist",
        "baseUrl": "./src",
        "noImplicitAny": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "~/*": ["*"]
        },
        "typeRoots": ["@types", "./node_modules/@types"],
        "plugins": [{ "transform": "typescript-transform-paths" }]
    }
}
